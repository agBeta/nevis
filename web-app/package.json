{
  "name": "web-app-server",
  "version": "1.0.0",
  "description": "A project to represent for interviews.",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "node ./src/main.js",
    "dev": "nodemon src/main.js",
    "lint": "eslint .",
    "test:unit": "NODE_ENV=test node --test src/**/*.test.js",
    "tda": "NODE_ENV=test node --test src/data-access/tests/*.test.js",
    "tint": "NODE_ENV=test PORT=9079 node --test-reporter=spec --test tests/integration/user-login.test.js",
    "test:integration": "NODE_ENV=test PORT=9079 node --test-reporter=spec --test tests/integration",
    "test": "npm run test:integration"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.7",
    "rate-limiter-flexible": "^4.0.0",
    "redis": "^4.6.12",
    "sanitize-html": "^2.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "eslint": "^8.54.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=20.0.0"
  },
  "imports": {
    "#types": {
      "default": "./src/types.d.ts"
    },
    "#controllers": {
      "default": "./src/controllers/index.js"
    },
    "#utils/*.js": "./src/utils/*.js"
  }
}
