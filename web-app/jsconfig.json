{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "module": "es2020",
        "moduleResolution": "Node",
        "outDir": "./tsBuild/just-to-turn-off-some-tsconfig-error",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "#types": ["./src/types.d.ts"],
            "#utils/*": ["./src/utils/*"],
            "#controllers/*": ["./src/controllers/*"]
        }
    },
    "include": ["./**/*.js", "/*.js"],
    "exclude": ["./node_modules", "./**/node_modules", "./temp"],
    "types": [
        "node",
        "express"
    ]
}
